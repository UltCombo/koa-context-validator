{
  "name": "koa-context-validator",
  "version": "0.1.0",
  "description": "A robust context validator for koajs",
  "main": "lib/index.js",
  "license": "MIT",
  "repository": "chentsulin/koa-context-validator",
  "author": {
    "name": "C.T. Lin",
    "email": "chentsulin@gmail.com",
    "url": "github.com/chentsulin/koa-context-validator"
  },
  "engines": {
    "node": ">=4"
  },
  "files": [
    "lib",
    "src"
  ],
  "keywords": [
    "koa",
    "middleware",
    "context",
    "validate",
    "validator",
    "joi"
  ],
  "dependencies": {
    "joi": "^8.1.0",
    "thenify": "^3.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-eslint": "^6.0.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.8.0",
    "chai": "^3.5.0",
    "eslint": "^2.10.2",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-plugin-import": "^1.8.0",
    "istanbul": "^0.4.1",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.1.0",
    "koa-compose": "^3.1.0",
    "koa-mount": "^2.0.0",
    "koa-router": "^7.0.1",
    "mocha": "^2.4.5",
    "nyc": "^6.4.4",
    "rimraf": "^2.5.2",
    "supertest": "^1.2.0",
    "supertest-as-promised": "^3.1.0"
  },
  "options": {
    "mocha": "--compilers js:babel-register --require babel-polyfill src/**/__tests__/**/*.spec.js"
  },
  "scripts": {
    "postinstall": "npm run build",
    "clean": "rimraf lib dist .nyc_output",
    "build": "npm run clean && babel src -d lib --ignore __tests__",
    "testonly": "NODE_ENV=test mocha $npm_package_options_mocha",
    "test": "npm run lint && npm run testonly",
    "test:cov": "nyc npm test",
    "lint": "eslint .",
    "prepublish": "npm run clean && npm test && npm run build"
  },
  "devEngines": {
    "node": "4.x || 5.x || 6.x",
    "npm": "2.x || 3.x"
  }
}
